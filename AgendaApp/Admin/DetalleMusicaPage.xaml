<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaApp.Admin.DetalleMusicaPage"
             Title="Detalle Canción">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Label Text="Detalles de la Canción" />

            <Entry x:Name="TituloEntry" Placeholder="Título" Text="{Binding Titulo}" />
            <Entry x:Name="ArtistaEntry" Placeholder="Artista" Text="{Binding Artista}" />

            <Button Text="Guardar Cambios" Clicked="OnGuardarCambiosClicked" 
                    BackgroundColor="#4CAF50" TextColor="White" />

            <Button Text="Eliminar Canción"
                    Clicked="OnEliminarClicked"
                    BackgroundColor="#F44336"
                    TextColor="White" />
        </StackLayout>
    </ScrollView>
</ContentPage>